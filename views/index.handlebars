        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-159672138-1', 'auto');
        ga('send', 'pageview');

        ga('create', 'UA-158792091-1', 'auto');
        ga('require', 'GTM-PT4VD77');
        ga('send', 'pageview');
        </script>
        <!-- End Google Analytics -->
    </head>

    <body>

        {{#if viewAlt}}
        <div class="bottomNav">
          <a href="/profile">Profile</a>
          <a href="/page_B" class="active">Home</a>
          <a href="/redeem">Redeem</a>
        </div>
        {{else}}
        <div id="sideNav" class="sidenav">
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
          <a href="/profile" class="sideNav_Profile">Profile</a>
          <a href="/redeem" class="sideNav_Redeem">Redeem</a>
        </div>
        {{/if}}

        <div class="mainbody" style = "background-color: white">

              <div id="header">    
                
                <div id="header-top">
                 {{#if viewAlt}}
                  <div id= "hmbgr" class = "icon" style="opacity: 0">
                      <span onclick="openNav()">
                          <img src="hamburger.png" height=40px style = "float: left"/>
                      </span>
                 </div>
                 {{else}}
                 <div id= "hmbgr" class = "icon">
                      <span onclick="openNav()">
                          <img src="hamburger.png" height=40px style = "float: left" />
                      </span>
                 </div>
                 {{/if}}

                 <div id="app-title">
                     <h3 id="app-name"> <b>PRO'D ACTIVITY</b> </h3>
                 </div>

                <div id="add" class = "icon">
                     <a href="/add">
                        <img src="add.png" height=40px style = "float: right" />
                     </a>
                </div>

               </div>

              <div class="topView">
                  <a href="/index" class="active">TO DO: </a>
                  <a href="/recent">DONE: </a>
              </div>

            </div>

            <hr>

           <div id="container" style = "background-color: white">
               


              <!-- <h3 id="home">Home</h3> -->

               <div id="content">

                   <div id="display-points" style="color:#dea300">
                        <h4>Current Points: {{currPoints}}pts</h4>
                   </div>



                {{#if noAssignments}}
                <div id="no-assignments">
                  <h5> <b>You're done for now! You may now relax...</b> </h5>
                  <img src="hammock.png" height=150px>
                </div>
                {{/if}}
                

                {{#each assignments}}
                <div class="assignment" id="{{id}}" style ="background-color: {{color}}">
                  <div id="assignment-header">
                    <h5 id="prio"> <b>{{priority}}</b> </h5>
                    <h4 id="due">DUE: {{date}}</h4>
                  </div>
                  <a href="#" class="thumbnail">
                    <h3>{{course}}</h3>
                    <h4>{{title}}</h4>
                  </a>
                  <div class="thumbnail, hideInfo">
                    <h5 style="color:black">{{description}}</h5>
                    <h4 id="points">Value: {{points}}pts</h4>
                      <button title="{{points}}" class="removeAssignment" id="remove">Remove</button>
                      <button title="{{points}}" class="removeAssignment" id="complete">Complete</button>
                  </div>

                </div>
                <br>
                {{/each}}

                </div>
            </div>
        </div>

    </body>
</html>
